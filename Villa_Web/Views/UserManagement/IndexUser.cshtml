@model List<UserDTO>
<br />
<div class="container p-4 border">
	<div class="row pb-2">
		<div class="col">
			<h1 class="text-primary">User Management</h1>
		</div>		
	</div>

	<table class="table">
		<thead>
			<tr>
				<th>
					ID
				</th>
				<th>
					User Name
				</th>
				<th>
					Name
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Id</td>
					<td>@item.UserName</td>
					<td>@item.Name</td>
					<td>
						<a asp-controller="UserManagement" asp-action="DeleteUser" asp-route-Id="@item.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
					</td>
				</tr>
			}
		</tbody>
	</table>

</div>